{
    "name": "Colored Sheet Tabs",
    "description": "Fills the whole Google Sheets tab with its colour",
    "version": "0.1.1",
    "manifest_version": 3,
    "permissions": [
        "scripting"
    ],
    "host_permissions": [
        "https://docs.google.com/spreadsheets/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://docs.google.com/spreadsheets/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "tabs.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/16.png",
        "24": "icons/24.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    }
}
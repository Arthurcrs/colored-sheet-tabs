{
  "name": "Better Sheet Tabs",
  "description": "Fills the whole Google Sheets tab with its colour",
  "version": "0.1.1",
  "manifest_version": 3,

  "permissions": ["scripting"],
  "host_permissions": ["https://docs.google.com/spreadsheets/*"],

  "content_scripts": [{
    "matches": ["https://docs.google.com/spreadsheets/*"],
    "js": ["content.js"],
    "css": ["tabs.css"],
    "run_at": "document_idle"
  }],

  "icons": { "32": "icons/16.png" }
}